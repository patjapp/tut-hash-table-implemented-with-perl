#!/usr/bin/env perl
use 5.018;
use strict;
use warnings;

use Test::More;

my $class = 'Hash';
use_ok( $class );
use Hash;

my $hash = new Hash();
isa_ok( $hash, $class );
can_ok( $hash, 'new'  );
can_ok( $hash, 'store' );
can_ok( $hash, 'fetch' );

$hash->store("key", "value");
$hash->store("a","A");
$hash->store("b","B");
$hash->store("c","C");
ok( $hash->fetch("key") eq "value", '$hash->fetch("key") eq "value"' );
ok( $hash->fetch("a") eq "A", '$hash->fetch("a") eq "A"' );
ok( $hash->fetch("b") eq "B", '$hash->fetch("b") eq "B"' );
ok( $hash->fetch("c") eq "C", '$hash->fetch("c") eq "C"' );
ok( !defined $hash->fetch("x"), '!defined $hash->fetch("x")' );


done_testing;


exit 0;
